{% extends "::base.html.twig" %}

{% block body %}

    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="form-group">
        {{ form_row(form.sms) }}
    </div>
    <div class="form-group">
        {{ form_row(form.push) }}
    </div>
    <div class="form-group">
        {{ form_row(form.checkFirst) }}
    </div>
    <div class="form-group">
        {{ form_row(form.checkSecond) }}
    </div>
    <div class="form-group">
        {{ form_row(form.checkThird) }}
    </div>
    <div class="form-group">
        {{ form_row(form.phone) }}
    </div>

    <button type="submit">Done</button>

    {{ form_end(form) }}

    <br>
    {% if phone is defined %}
        {{ phone }}
    {% endif %}
{% endblock body %}

